datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  hashedPassword String
  createdAt      DateTime @default(now())
  offers         Offer[] 
  
}

model Offer {
  id          String    @id @default(uuid())
  imageUrl    String?   // URL zdjÄ™cia (opcjonalnie)
  title       String
  description String
  price       Float
  category    Category
  major       String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  }

enum Category {
  KSIAZKI
  NOTATKI
  KOREPETYCJE
  INNE
}




